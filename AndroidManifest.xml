<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hellochess"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.hellochess.MainPageActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.hellochess.MainActivity"
            android:label="@string/title_activity_main_page"
            android:configChanges="orientation"
    		android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.hellochess.RecordActivity"
            android:label="@string/title_activity_record"
            android:configChanges="orientation"
    		android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.example.hellochess.PlaybackActivity"
            android:label="@string/title_activity_playback"
            android:configChanges="orientation"
    		android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
